<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".asdosMenu.DashBoardAsdosFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Hello Reza"
                    android:textColor="@color/baseColor"
                    android:layout_marginStart="20dp"
                    android:textSize="32sp" />

                <ImageButton
                    android:id="@+id/profiles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_vctor"
                    android:contentDescription="profiles"
                    android:layout_marginStart="175dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May, 24 1990"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/baseColor"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/txtHari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/thirdColor"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tanggal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height= "wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="24sp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/secondColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="show All"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/thirdColor"
                    android:layout_marginStart="200dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="115dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/module" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="24sp"
                android:textColor="@color/secondColor"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/attendance"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>